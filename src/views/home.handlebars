<div class="container">
    <h1 class="text-center my-4">Lista de Productos</h1>
    <div class="row">
        {{#each productos}}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">Descripci칩n: {{this.description}}</p>
                    <p class="card-text">Precio: {{this.price}}</p>
                    <p class="card-text">C칩digo: {{this.code}}</p>
                    <p class="card-text">Stock: {{this.stock}}</p>
                    <form action="api/carts/671fed948506a28c0d8a6a7e/product/{{this._id}}" method="POST">
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">a침adir al carrito</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="text-center my-4">
        <p>P치gina {{currentPage}} de {{totalPages}}</p>

