<div class="container">
    <h1 class="text-center my-4">Lista de Productos</h1>
    <div class="row">
        {{#each productos}}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">Descripción: {{this.description}}</p>
                    <p class="card-text">Precio: {{this.price}}$</p>
                    <p class="card-text">Código: {{this.code}}</p>
                    <p class="card-text">Stock: {{this.stock}}</p>
                    <form action="producto/{{this._id}}" method="GET">
                        <button class="btn btn-primary">ver detalles</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="text-center my-4">
        <p>Página {{currentPage}} de {{totalPages}}</p>

        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}" class="btn btn-primary mx-2">Anterior</a>
        {{/if}}

        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}" class="btn btn-primary mx-2">Siguiente</a>
        {{/if}}
    </div>
</div>